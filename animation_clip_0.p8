-- main game loop

-- for bounce animation
-- x value limit to the right
-- is x = 102

-- y value limit down is
-- y = 123

function _init()
	text_table = {'h','e','l','l','o','♥'}
	text_string= 'hello♥'
	text_color_i = 1
	text_colors = {8, 9, 10, 11, 12, 13}
	frame = 0
	x_limit = 102
	y_limit = 123
	x = 0
	y = 0
end


function _update()
	frame += 1
	if frame % 10 == 0 then
	 text_color_i = (text_color_i % #text_colors) + 1 
	 x = (x % x_limit) + 1 
	 y = (y % y_limit) + 1 

	end
end


function _draw()
	cls()
	print(text_string, x, y, text_colors[text_color_i])
	map()
end



